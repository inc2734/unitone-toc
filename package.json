{
	"engines": {
		"node": ">=10.0.0",
		"npm": ">=6.9.0 <7"
	},
	"devDependencies": {
		"@inc2734/contents-outline": "^0.1.3",
		"@wordpress/env": "^5.3.0",
		"@wordpress/scripts": "^24.2.0",
		"autoprefixer": "^10.4.12",
		"classnames": "^2.3.2",
		"cpy-cli": "^4.2.0",
		"cssnano": "^5.1.13",
		"lodash": "^4.17.21",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.16",
		"postcss-cli": "^10.0.0",
		"postcss-import": "^15.0.0",
		"prettier": "npm:wp-prettier@2.6.2",
		"rimraf": "^3.0.2"
	},
	"scripts": {
		"export:wp-content:plugins": "npm run cli 'cp -r wp-content/plugins .export/wp-content'",
		"export:wp-content:uploads": "npm run cli 'cp -r wp-content/uploads .export/wp-content'",
		"export:wp-content": "npm run cli 'rm -rf .export/wp-content' && mkdir -p .export/wp-content/uploads && run-p export:wp-content:*",
		"export:db": "mkdir -p .export/sql && npm run wp 'db export .export/sql/local.sql'",
		"export": "run-p export:*",
		"import:wp-content:plugins": "npm run cli 'cp -r .export/wp-content/plugins wp-content'",
		"import:wp-content:uploads": "npm run cli 'cp -r .export/wp-content/uploads wp-content'",
		"import:wp-content": "run-p import:wp-content:*",
		"import:db": "npm run wp 'db import .export/sql/local.sql'",
		"import": "run-p import:*",
		"wp-env": "wp-env",
		"start": "wp-env start && open http://localhost:8888",
		"stop": "npm run export && wp-env stop",
		"cli": "wp-env run cli",
		"wp": "wp-env run cli wp",
		"composer": "wp-env run composer",
		"blocks:format": "wp-scripts format src/blocks",
		"blocks:build": "rimraf -r dist/blocks && wp-scripts build --output-path=dist",
		"blocks:php": "cpy 'src/blocks/**/*.php' 'dist/blocks'",
		"blocks": "run-s blocks:format blocks:build blocks:php",
		"build": "run-p blocks",
		"test:lint:blocks": "wp-scripts lint-js src/blocks",
		"test:lint:php": "wp-env start && wp-env run composer run-script lint",
		"test:lint": "run-s test:lint:*",
		"test": "run-s test:*",
		"zip:pack": "rimraf -r unitone unitone-toc.zip && rsync -a --exclude='.*' --exclude='*.log' --exclude='error_log' --exclude='todo.md' --exclude='*.config.js' --exclude='/bin' --exclude='/node_modules' --exclude='/vendor' --exclude='/tests' --exclude='/src' --exclude='/unitone-toc.zip' ./ unitone-toc",
		"zip:archive": "zip -9 -qmr unitone-toc.zip unitone-toc",
		"zip": "npm run zip:pack && wp-env start && wp-env run composer 'install --no-dev -d unitone-toc' && npm run zip:archive",
		"make-pot": "npm run wp 'i18n make-pot wp-content/plugins/unitone-toc wp-content/plugins/unitone-toc/languages/unitone-toc.pot --exclude=.*,src'",
		"make-json": "rimraf languages/*.json && npm run wp 'i18n make-json wp-content/plugins/unitone-toc/languages/unitone-toc-ja.po --no-purge'"
	}
}
